        function createWordCard(word) {
            const card = document.createElement('div');
            card.className = 'word-card';

            let audioButtonsHTML = '';
            word.audio.forEach((audioFile, index) => {
                const label = word.audio.length > 1 ? `üîä ‡πÄ‡∏•‡πà‡∏ô‡πÄ‡∏™‡∏µ‡∏¢‡∏á ${index + 1}` : 'üîä ‡πÄ‡∏•‡πà‡∏ô‡πÄ‡∏™‡∏µ‡∏¢‡∏á';
                audioButtonsHTML += `
                    <button class="play-button" onclick="playAudio('${audioFile}', this)">
                        ${label}
                    </button>
                `;
            });

            card.innerHTML = `
                <div class="thai-word">${word.thai}</div>
                <div class="pronunciation-section">
                    <div class="pronunciation-item">
                        <span class="pronunciation-label">üî§ ‡∏≠‡∏±‡∏Å‡∏©‡∏£‡πÇ‡∏£‡∏°‡∏±‡∏ô:</span>
                        <span class="pronunciation-value">${word.romanization}</span>
                    </div>
                    <div class="pronunciation-item">
                        <span class="pronunciation-label">üáπüá≠ ‡∏ó‡∏±‡∏ö‡∏®‡∏±‡∏û‡∏ó‡πå‡πÑ‡∏ó‡∏¢:</span>
                        <span class="pronunciation-value">${word.thaiScript}</span>
                    </div>
                    <div class="pronunciation-item">
                        <span class="pronunciation-label">üì¢ ‡∏™‡∏±‡∏ó‡∏≠‡∏±‡∏Å‡∏©‡∏£:</span>
                        <span class="pronunciation-value">${word.ipa}</span>
                    </div>
                </div>
                <div class="usage">
                    <strong>üí° ‡∏ß‡∏¥‡∏ò‡∏µ‡πÉ‡∏ä‡πâ:</strong> ${word.usage}
                </div>
                <div class="audio-controls">
                    ${audioButtonsHTML}
                </div>
            `;

            return card;
        }

        function playAudio(audioFile, button) {
            const audio = new Audio(`TaiYi/${audioFile}.mp3`);
            
            // Reset all buttons
            document.querySelectorAll('.play-button').forEach(btn => {
                btn.classList.remove('playing');
                btn.textContent = btn.textContent.replace('‚è∏Ô∏è', 'üîä');
            });

            button.classList.add('playing');
            button.textContent = button.textContent.replace('üîä', '‚è∏Ô∏è');

            audio.play();

            audio.onended = () => {
                button.classList.remove('playing');
                button.textContent = button.textContent.replace('‚è∏Ô∏è', 'üîä');
            };

            audio.onerror = () => {
                alert('‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏•‡πà‡∏ô‡πÑ‡∏ü‡∏•‡πå‡πÄ‡∏™‡∏µ‡∏¢‡∏á‡πÑ‡∏î‡πâ ‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ß‡πà‡∏≤‡πÑ‡∏ü‡∏•‡πå‡πÄ‡∏™‡∏µ‡∏¢‡∏á‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô‡πÇ‡∏ü‡∏•‡πÄ‡∏î‡∏≠‡∏£‡πå audio/');
                button.classList.remove('playing');
                button.textContent = button.textContent.replace('‚è∏Ô∏è', 'üîä');
            };
        }

        // Initialize the page
        const wordList = document.getElementById('wordList');
        vocabulary.forEach(word => {
            wordList.appendChild(createWordCard(word));
        });
    </script>
